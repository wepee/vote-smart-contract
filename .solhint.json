{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "func-param-name-mixedcase": "warn",
    "modifier-name-mixedcase": "warn",
    "ordering": "warn",
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "constructor-syntax": "warn",
    "prettier/prettier": "warn"
  }
}